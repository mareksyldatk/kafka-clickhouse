# Non-secret defaults for the Kafka to ClickHouse local stack

# Required: Kafka KRaft cluster identity (generate with: docker run --rm confluentinc/cp-kafka:7.7.7 kafka-storage.sh random-uuid)
CLUSTER_ID=8Zt6o8hOSRuY0rFBLv0BTA

# ClickHouse credentials (local only; change for your env)
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=clickhouse

# Kafka SASL/PLAIN (local only; align with configs/kafka/secrets/broker_jaas.conf)
KAFKA_BROKER_SASL_USERNAME=broker
KAFKA_BROKER_SASL_PASSWORD=change_me
SCHEMA_REGISTRY_SASL_USERNAME=schema_registry
SCHEMA_REGISTRY_SASL_PASSWORD=change_me
KAFKA_CONNECT_SASL_USERNAME=kafka_connect
KAFKA_CONNECT_SASL_PASSWORD=change_me
KAFKA_CLIENT_SASL_USERNAME=client
KAFKA_CLIENT_SASL_PASSWORD=change_me
