# Non-secret defaults for the Kafka to ClickHouse local stack
COMPOSE_PROJECT_NAME=kafka-clickhouse

# Stable container names for predictable networking
ZOOKEEPER_CONTAINER_NAME=kafka-clickhouse-zookeeper
KAFKA_BROKER_CONTAINER_NAME=kafka-clickhouse-broker
CLICKHOUSE_SERVER_CONTAINER_NAME=kafka-clickhouse-ch

# Kafka KRaft identity
KAFKA_KRAFT_CLUSTER_ID=8Zt6o8hOSRuY0rFBLv0BTA
KAFKA_BROKER_NODE_ID=1

# Host ports exposed by services when they are added
ZOOKEEPER_CLIENT_PORT=2181
KAFKA_BROKER_PORT=9092
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
